{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "overrides": [],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": ["react", "import", "@typescript-eslint"],
  "rules": {
    "semi": ["off", "always"],
    "@typescript-eslint/semi": "off",
    "no-unexpected-multiline": "error",
  },
  "globals": {
    "JSX": "readonly",
    "React": "readonly"
  }
}
