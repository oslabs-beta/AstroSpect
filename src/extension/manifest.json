{
  "manifest_version": 3,
  "name": "AstroSpect",
  "version": "0.0.1",
  "icons": {
    "32": "assets/logo.png",
    "16": "assets/logo.png",
    "48": "assets/logo.png",
    "128": "assets/logo.png"
  },
  "devtools_page": "devtools.html",
  "host_permissions": ["<all_urls>"],
  "permissions": ["tabs"],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["main.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
